<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.TravelManager.FXMLController">
   <center>
      <VBox alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <Label text="Departure Airport" />
                        <ComboBox fx:id="cmbPartenza" prefWidth="150.0" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Arrival Airport:" />
                        <ComboBox fx:id="cmbArrivo" prefWidth="150.0" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Max Price:" />
                        <TextField fx:id="txtPrezzoVolo" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox>
                     <children>
                        <Label text="Stops:" />
                        <ComboBox fx:id="cmbScali" prefWidth="150.0" />
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#handleCercaVoli" text="Search">
                     <HBox.margin>
                        <Insets top="17.0" />
                     </HBox.margin>
                  </Button>
                  <Button alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#handleClearVoli" text="Clear">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="17.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="lblErroreVolo" alignment="CENTER" contentDisplay="CENTER" disable="true" textFill="RED" />
            <HBox>
               <children>
                  <TableView fx:id="tblVoli" prefHeight="200.0" prefWidth="700.0">
                    <columns>
                      <TableColumn fx:id="clDeparture" prefWidth="262.5" text="Departure">
                           <columns>
                              <TableColumn fx:id="clStatoPartenza" prefWidth="87.5" text="State" />
                              <TableColumn fx:id="clCittaPartenza" prefWidth="87.5" text="City" />
                              <TableColumn fx:id="clAeroportoPartenza" prefWidth="87.5" text="Airport" />
                           </columns>
                        </TableColumn>
                      <TableColumn fx:id="clArrival" prefWidth="262.5" text="Arrival">
                           <columns>
                              <TableColumn fx:id="clStatoArrivo" prefWidth="87.5" text="State" />
                              <TableColumn fx:id="clCittaArrivo" prefWidth="87.5" text="City" />
                              <TableColumn fx:id="clAeroportoArrivo" prefWidth="87.5" text="Airport" />
                           </columns>
                        </TableColumn>
                        <TableColumn fx:id="clPrezzoVolo" minWidth="0.0" prefWidth="87.5" text="Fare" />
                        <TableColumn fx:id="clScali" prefWidth="87.5" text="Stops" />
                    </columns>
                     <HBox.margin>
                        <Insets left="52.5" right="52.5" />
                     </HBox.margin>
                  </TableView>
               </children>
            </HBox>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Label alignment="CENTER" text="The AirBnB search section will activate if the designated destionation is one of these cities:&#10; New York, Los Angeles, San Francisco, Washington D.C., Chicago, Boston " textAlignment="CENTER">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER">
                     <children>
                        <VBox>
                           <children>
                              <Label text="Max Price:" />
                              <TextField fx:id="txtPrezzoBnB" disable="true" />
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Property Type:" />
                              <ComboBox fx:id="cmbTipo" disable="true" prefWidth="150.0" />
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Accomodations:" />
                              <TextField fx:id="txtOspiti" disable="true" />
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </VBox>
                        <Button disable="true" mnemonicParsing="false" onAction="#handleCercaBnBs" text="Search">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" top="17.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
                  <HBox alignment="CENTER">
                     <children>
                        <VBox>
                           <children>
                              <Label text="Rating:" />
                              <ComboBox fx:id="cmbRating" disable="true" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Reviews:" />
                              <ComboBox fx:id="cmbRecensioni" disable="true" prefWidth="150.0" />
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </VBox>
                        <Button disable="true" mnemonicParsing="false" onAction="#handleClearAirBnB" text="Clear">
                           <HBox.margin>
                              <Insets top="17.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Label fx:id="lblErroreAirBnB" disable="true" textFill="RED" />
                  <TableView fx:id="tblBnB" disable="true" prefHeight="200.0" prefWidth="700.0">
                    <columns>
                      <TableColumn fx:id="clNome" prefWidth="100.0" text="Name" />
                        <TableColumn fx:id="clQuartiere" prefWidth="100.0" text="Neighbourood" />
                        <TableColumn fx:id="clTipo" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="clOspiti" prefWidth="100.0" text="Accomodations" />
                        <TableColumn fx:id="clPrezzo" prefWidth="100.0" text="Price" />
                        <TableColumn fx:id="clRating" prefWidth="100.0" text="Rating" />
                        <TableColumn fx:id="clRecensioni" prefWidth="100.0" text="Reviews" />
                    </columns>
                     <VBox.margin>
                        <Insets bottom="20.0" left="52.5" right="52.5" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="USA Travel Planner" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </top>
</BorderPane>
